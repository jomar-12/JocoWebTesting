@model IEnumerable<JocoWebTesting.Models.EstudianteCurso>

@{
    ViewBag.Title = "Students";
}

<h2>Students</h2>

<div class="col-md-6 p-0 mb-3">
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-md-right">Profesion:</dt>
                <dd class="col-sm-9">@ViewBag.Profesion</dd>
                <dt class="col-sm-3 text-md-right">Curso:</dt>
                <dd class="col-sm-9">@ViewBag.Curso</dd>
            </dl>
        </div>
    </div>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante.Nombre)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Estudiante.Nombre)
                </td>
                <td>
                    <a href="@Url.Action("DeleteFromCourse", new { estudianteId = item.Estudiante.Id, cursoId = item.CursoId, nombreCurso = ViewBag.Curso, nombreProfesion = ViewBag.Profesion })">
                        @Html.Partial("_svgIcons", JocoWebTesting.Utilities.Icon.trashIcon)
                    </a>
                </td>
            </tr>
        }

    </table>
}
else
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Ups..!</strong> No hay estudiantes en este curso actualmente.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

