<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div style="width: 100%"><iframe width="100%" height="600" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src=""></iframe></div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $('#loc').click(function (e) {
            e.preventDefault();
            let loc = 'https://maps.google.com/maps?q=' + $(this).text() + '&output=embed';

            $('iframe').attr('src', loc);

            $('#modal').modal('show');
        });
    </script>

}