@model List<JocoWebTesting.Models.Estudiante>

@if (Model.Count > 0 && Model != null)
{
    <div id="estudiantes" class="col-md-5 offset-1">
        <div class="card">
            <div class="card-body">
                @{
                    foreach (var item in Model)
                    {
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" name="estudiantesId" class="custom-control-input" id="@item.Id" value="@item.Id">
                            <label class="custom-control-label" for="@item.Id">@item.Nombre</label>
                            @Html.ValidationMessage("estudiantesId", new { @class = "text-danger" })
                        </div>
                    }
                }
            </div>
        </div>
    </div>
}
